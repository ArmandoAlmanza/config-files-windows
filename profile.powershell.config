# Prompt
Import-Module Terminal-Icons
Import-Module oh-my-posh
Set-PoshPrompt jamonsad

Set-PSReadLineOption -PredictionSource History
Set-PSReadLineOption -Colors @{
  Command            = '#DAEAF1'
  Parameter          = '#B4E197'
  InlinePrediction   = '#F6C6EA'
  Default            = '#FCF69C'
  
}

cls

# Alias
Set-Alias g git
Set-Alias ll ls
Set-Alias v vim
Set-Alias c code
Set-Alias v vim
Set-Alias m mongod

Set-Alias -Name touch -Value New-Item

#Set-Alias m mongod

# Functions
function pro {code $PROFILE}
function prov {v $PROFILE}
function pse {php -S localhost:3000}
function ch {code (get-location)}

  # Npm functions
function nd {npm run dev}
function nb {npm run build}

  # Vite Function
function vit {
  param(
    $name, $template
  )
  npm init vite@latest $name -- --template $template
}

  # cd functions
function dev {
  param (
    $project
  )
  cd D:\Documentos\Dev\$project
}

function esc {
  param (
    $materia, $parcial
  )
  cd D:\Documentos\Escuela\$materia\$parcial
}

# Copiar configuraciones y estilos por defecto
function cvi {

  param(
    $language
  )

  if($language -eq "react"){
    copy D:\Documentos\Dev\Config\$language\vite.config.js (get-location)
  }  
  if($language -eq "react-ts") {
    copy D:\Documentos\Dev\Config\$language\* (get-location)
  }   
  if($language -eq "vue") {
    copy D:\Documentos\Dev\Config\$language\vite.config.js (get-location)
  } 
  if($language -eq "vue-ts") {
    copy D:\Documentos\Dev\Config\$language\* (get-location)
  } 
}

function cs {
  copy D:\Documentos\Dev\Config\Styles\* (get-location) -Recurse -Force
}
